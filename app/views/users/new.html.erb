<section>
  <header class="page-header text-center">
  <h1>Signup!</h1>
  </header>

  <%= form_for :user, url: '/users' do |f| %>
    <div class="container">
      <div class="row m-2">
        <div class="col text-center">
          <span class="">First name:</span>
        </div>
        <div class="col">
          <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="row m-2">
        <div class="col text-center">
          <span class="">Last name:</span>
        </div>
        <div class="col">
          <%= f.text_field :last_name %>
        </div>
      </div>

      <div class="row m-2">
        <div class="col text-center">
          <span class="">Email:</span>
        </div>
        <div class="col">
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="row m-2">
        <div class="col text-center">
          <span class="">Password:</span>
        </div>
        <div class="col">
          <%= f.password_field :password %>
        </div>
      </div>


      <div class="row m-2">
        <div class="col text-center">
          <span class="">Password Confirmation:</span>
        </div>
        <div class="col">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <div class="row m-5">
        <span class="text-center"><%= f.submit "Submit", :class => 'btn btn-success w-25 '%></span>
      </div>
      
    
  </div>

      
        <span></span>
        <span> </span>
      
        <span> </span>
      
   
    
  <% end %>
</section>
