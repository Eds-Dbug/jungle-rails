
<section>
  <header class="page-header text-center">
  <h1>Login!</h1>
  </header>
</section>

<%= form_tag '/login' do %>

  <div class="container">
    <div class="row m-2">
      <div class="col text-center">
        <span class="">Email:</span>
      </div>
      <div class="col">
        <%= text_field_tag :email %>
      </div>
    </div>

    <div class="row m-2">
      <div class="col text-center">
        <span class="">Password:</span>
      </div>
      <div class="col">
        <%= password_field_tag :password %>
      </div>
    </div>

    <div class="row m-5">
    <span class="text-center"><%= submit_tag "Login", class: "btn btn-success w-25" %></span>
  </div>
   



<% end %>